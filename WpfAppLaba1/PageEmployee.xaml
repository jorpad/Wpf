<Page x:Class="WpfAppLaba1.PageEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppLaba1"
      xmlns:command="clr-namespace:WpfAppLaba1.Commands"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Сотрудники">

    <StackPanel>
        <Menu>
            <MenuItem Header="Действие" >
                <MenuItem Header="Отменить" Command="Undo" ></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Создать" Command="New"></MenuItem>
                <MenuItem Header="Редактировать" Command="command:DataCommands.Edit"></MenuItem>
                <MenuItem Header="Сохранить" Command="Save"></MenuItem>
                <MenuItem Header="Найти" Command="Search"/>
                <Separator></Separator>
                <MenuItem Header="Удалить" Command="Delete"></MenuItem>
            </MenuItem>
            <MenuItem Header="Отчет"></MenuItem>
        </Menu>
        <ToolBar Name="ToolBar1" Margin="-11,0,-18,0">
            <Button Name="Undo" ToolTip="Отменить редактирование/создание" Margin="5,2,5,2" Command="Undo">
                <Image Source="Image/Undo.png" Height="40" Width="40"/>
            </Button>
            <Button Name="Add" ToolTip="Добавить" Margin="3" Command="New">
                <Image Source="Image/Add.png" Height="40" Width="40" />
            </Button>
            <Button Name="Edit" ToolTip="Редактировать" Margin="3" Command="command:DataCommands.Edit">
                <Image Source="Image/Edit.png" Height="40" Width="40" />
            </Button>
            <Button Name="Search" ToolTip="Поиск" Margin="3" Command="Search">
                <Image Source="Image/Search.png" Height="40" Width="40" />
            </Button>
            <Button Name="Save" ToolTip="Сохранить" Margin="3" Command="Save">
                <Image Source="Image/Save.png" Height="40" Width="40" />
            </Button>
            <Button Name="Delete" ToolTip="Удалить" Margin="3" Command="Delete">
                <Image Source="Image/Delete.png" Height="40" Width="40" />
            </Button>
        </ToolBar>
        <TextBlock Text="Список сотрудников" Margin="10,0" Style="{StaticResource baseTextHead}"/>
        <DataGrid Name="DataGrid1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" />
                <DataGridTextColumn Header="Имя" />
                <DataGridTextColumn Header="Отчество" />
                <DataGridComboBoxColumn Header="Должность"/>
                <DataGridTemplateColumn Header="Дата рождения"/>
                <DataGridTextColumn Header="Телефон" />
                <DataGridTextColumn Header="Электронная почта" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
    <Page.CommandBindings>
        <CommandBinding Command="Undo" Executed="UndoCommandBinding_Executed" CanExecute="EditCommandBinding_CanExecute"/>
        <CommandBinding Command="New" Executed="AddCommandBinding_Executed" CanExecute="SaveCommandBinding_CanExecute"/>
        <CommandBinding Command="command:DataCommands.Edit" Executed="EditCommandBinding_Executed" CanExecute="SaveCommandBinding_CanExecute"/>
        <CommandBinding Command="Search" Executed="SearchCommandBinding_Executed" CanExecute="SaveCommandBinding_CanExecute"/>
        <CommandBinding Command="Save" Executed="SaveCommandBinding_Executed"/>
        <CommandBinding Command="command:DataCommands.Delete" Executed="DeleteCommandBinding_Executed" />
    </Page.CommandBindings>
</Page>